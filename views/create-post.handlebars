<section>
    <a href="/dashboard" class="is-pulled-right ms-2"> &larr; back to dashboard</a>
    <h2 class="title ms-2 mt-2">Create new blog post</h2><hr>

    <form class="new-post-form">
        <div class="card text-white bg-success mb-3 ms-2" style="max-width: 50rem;">
            <label for="post-title">Title:</label>
            <input class="input" type="text" id="post-title" name="post-title" placeholder="insert blog title"/>
        </div>
        <div class="card text-white bg-success mb-3 ms-2" style="max-width: 50rem;">
            <label for="post-content">Content:</label>
            <input type="textarea" class="textarea is-large" id="post-content" name="post-content" placeholder="insert blog content here"/>
        </div>
        <button type="submit" class="btn-primary ms-2 p-1 rounded" style="width: 100px;">Create Post</button>
    </form>
</section>

<script src="/javascript/add-post.js"></script>
<script src="/javascript/create-post.js"></script>