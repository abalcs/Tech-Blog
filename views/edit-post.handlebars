<article>
  <a href="/dashboard" class="ms-3" style="text-decoration: none; color: red; font-weight: bold;"> &larr; back to dashboard</a>
  <h2 class="mt-3 ms-3">Edit post</h2><hr>
  <form class="edit-post-form">
    <div class="ms-3">
        <label for="post-title" style="font-weight: bolder;">post title:</label>
        <input class="input ms-4" style="width: 20rem;" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div class="ms-3">
        <label for="post-content" style="font-weight: bolder;">post content:</label>
        <input class="textarea mt-2" style="width: 20rem" name="post-content" type="text" value="{{post.post_content}}" />
    </div>

    <div class="ms-3 ">
       created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>

    <div class="mt-3 ms-3">
      <button type="submit" class="btn-success ms-3">save post</button>
      <button type="button" class="delete-post-btn btn-danger ms-3">delete post</button>
    </div>
    
  </form>
</article>

<div class="mt-3 mb-2">
  {{> comments post.comments}}
</div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>